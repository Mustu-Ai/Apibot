# -----------------------------------------
# Base Python image
# -----------------------------------------
FROM python:3.11-slim

# -----------------------------------------
# Set work directory
# -----------------------------------------
WORKDIR /app

# -----------------------------------------
# Install dependencies
# -----------------------------------------
COPY requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# -----------------------------------------
# Copy app files
# -----------------------------------------
COPY . /app

# -----------------------------------------
# Expose port (Koyeb uses PORT env)
# -----------------------------------------
EXPOSE 8080

# -----------------------------------------
# Start the server
# -----------------------------------------
CMD ["python", "app.py"]
